<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/chatleftbackgroung"
    android:id="@+id/chattextlayout"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/chattingtextitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:maxWidth="250dp"
        android:padding="3dp"
        android:text="chattingleftitem"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:paddingRight="10dp"
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/chattingtextitem"
        app:layout_constraintStart_toEndOf="@+id/chattingtextitem" />
</androidx.constraintlayout.widget.ConstraintLayout>